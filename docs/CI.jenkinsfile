#!groovy
@Library('jenkins-pipeline-lib@pj/issue') _

pipeline
{
  agent any
  stages
  {
    stage('Build')
    {
      steps
      {
        sh 'make'
      }
    }
    stage('Format')
    {
      steps
      {
        clangFormat()
      }
    }
  }
  post
  {
    always
    {
      sendNotifications(currentBuild.result,currentBuild.changeSets)
    }
    failure
    {
      githubFileIssue()
    }
  }
}
